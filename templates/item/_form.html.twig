<form name='item' method='post' id="item-add" class="w-full max-w-lg">
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        {{ form_errors(form) }}
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      {{ form_label(form.name, 'Item', {
        'label_attr': {'class': 'item-form-label'}
      }) }}
      {{ form_widget(form.name) }}
      </div>
      <div class="w-full md:w-1/2 px-3">
      {{ form_label(form.priority, 'Priority', {
        'label_attr': {'class': 'item-form-label'}
      }) }}
      {{ form_widget(form.priority) }}
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
      {{ form_label(form.description, 'Description', {
        'label_attr': {'class': 'item-form-label'}
      }) }}
      {{ form_widget(form.description) }}
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
      {{ form_label(form.create_date, 'Created Date', {
        'label_attr': {'class': 'item-form-label'}
      }) }}
      {{ form_widget(form.create_date) }}
      </div>
    </div>
    {#{{ form_widget(form.client) }}#}
    {{ form_rest(form) }}
    <div class="md:flex md:items-center">
      <div class="md:w-2/3">
        <button class="bg-transparent hover:bg-blue-600 text-blue-600 font-semibold hover:text-white py-2 px-4 border-solid border-blue-600 basis-1/4 h-1/5 text-center text-xl">{{ button_label|default('Save') }}</button>
      </div>
    </div>    
</form>