{% extends 'main.html.twig' %}

{% block title %}Item index{% endblock %}

{% block main %}
<div class="px-8 py-4">    
    <h1>Item List</h1>

    <table class="shadow-lg bg-white border-collapse w-full">
        <thead class="text-base border text-left bg-blue-100">
            <tr>
                <th class="px-8 py-4">Id</th>
                <th class="px-8 py-4">Name</th>
                <th class="px-8 py-4">Description</th>
                <th class="px-8 py-4">Priority</th>
                <th class="px-8 py-4">Create_date</th>
                <th class="px-8 py-4">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td class="border px-8 py-4">{{ item.id }}</td>
                <td class="border px-8 py-4">{{ item.name }}</td>
                <td class="border px-8 py-4">{{ item.description }}</td>
                <td class="border px-8 py-4">{{ item.priority }}</td>
                <td class="border px-8 py-4">{{ item.createDate ? item.createDate|date('Y-m-d') : '' }}</td>
                <td class="border px-8 py-4">
                    <a href="{{ path('app_item_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('app_item_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="border px-8 py-4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_item_new') }}">Create new</a>
</div>    
{% endblock %}
